{
  "name": "porcupine-publisher",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace @porcupine/web run dev",
    "dev:cms": "npm --workspace @porcupine/cms run dev",
    "dev": "concurrently -n cms,web -c blue,green \"npm run dev:cms\" \"npm run dev:web\"",
    "dev:stack": "podman compose up --build",
    "test": "npm --workspaces run test",
    "lint": "npm --workspaces run lint",
    "build": "npm --workspaces run build",
    "typecheck": "npm --workspaces run typecheck"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
